{
  "name": "@rheas/views",
  "version": "0.0.6",
  "description": "Rheas view renderer and a basic layout file for SPA",
  "main": "index.js",
  "keywords": [
    "rheas",
    "express",
    "framework",
    "nodejs",
    "laravel",
    "server",
    "library",
    "views",
    "renderer",
    "pug"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "tsc": "tsc",
    "test": "jest",
    "coverage": "jest --coverage",
    "copypackage": "cp -rf package.json build",
    "build": "tsc && npm run copypackage",
    "copypackage_dev": "cp -rf package.json build_dev",
    "build-dev": "tsc --outDir ./build_dev && npm run copypackage_dev"
  },
  "dependencies": {
    "@rheas/contracts": "^0.0.11",
    "@rheas/services": "^0.0.2",
    "@rheas/support": "^0.0.7",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/pug": "^2.0.6",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rheas-io/views.git"
  },
  "author": "Kalesh Kaladharan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rheas-io/views/issues"
  },
  "homepage": "https://github.com/rheas-io/views#readme"
